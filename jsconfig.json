{
  "compilerOptions": {
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2022",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist"]
}

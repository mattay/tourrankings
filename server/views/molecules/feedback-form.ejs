<!-- Feedback Form Component -->

<link rel="stylesheet" href="/css/feedback-form.css">
<script type="module" src="/js/feedback.js" defer></script>

<div class="feedback-form-container" id="feedback-container">
  <button class="feedback-toggle btn btn-primary" id="feedback-toggle" aria-label="Open feedback form">
    <i class="icon" aria-hidden="true" focusable="false">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
          <path d="M512 240c0 114.9-114.6 208-256 208c-37.1 0-72.3-6.4-104.1-17.9c-11.9 8.7-31.3 20.6-54.3 30.6C73.6 471.1 44.7 480 16 480c-6.5 0-12.3-3.9-14.8-9.9c-2.5-6-1.1-12.8 3.4-17.4c0 0 0 0 0 0s0 0 0 0s0 0 0 0c0 0 0 0 0 0l.3-.3c.3-.3 .7-.7 1.3-1.4c1.1-1.2 2.8-3.1 4.9-5.7c4.1-5 9.6-12.4 15.2-21.6c10-16.6 19.5-38.4 21.4-62.9C17.7 326.8 0 285.1 0 240C0 125.1 114.6 32 256 32s256 93.1 256 208z"/>
      </svg>
    </i>
    Feedback
  </button>

  <div class="feedback-modal" id="feedback-modal">
    <div class="feedback-modal-content">
      <div class="feedback-header">
        <h3>Share Your Feedback</h3>
        <button class="feedback-close" id="feedback-close" aria-label="Close feedback form">&times;</button>
      </div>

      <form class="feedback-form" id="feedback-form">
        <div class="form-group">
          <label for="feedbackType">Feedback Type</label>
          <select id="feedbackType" name="feedbackType" required>
            <option value="">Select type...</option>
            <option value="bug">Bug Report</option>
            <option value="data-error">Data Error</option>
            <option value="feature-request">Feature Request</option>
            <option value="general">General Feedback</option>
            <option value="praise">Praise</option>
          </select>
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Please describe your feedback in detail..."
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label for="userEmail">Email (optional)</label>
          <input
            type="email"
            id="userEmail"
            name="userEmail"
            placeholder="your.email@example.com"
          />
          <small class="form-help">Only if you'd like a response</small>
        </div>

        <div class="form-actions">
          <button type="button" class="btn btn-cancel" id="feedback-cancel">Cancel</button>
          <button type="submit" class="btn btn-primary" id="feedback-submit">
            <i class="icon" aria-hidden="true" focusable="false">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M498.1 5.6c10.1 7 15.4 19.1 13.5 31.2l-64 416c-1.5 9.7-7.4 18.2-16 23s-18.9 5.4-28 1.6L284 427.7l-68.5 74.1c-8.9 9.7-22.9 12.9-35.2 8.1S160 493.2 160 480l0-83.6c0-4 1.5-7.8 4.2-10.8L331.8 202.8c5.8-6.3 5.6-16-.4-22s-15.7-6.4-22-.7L106 360.8 17.7 316.6C7.1 311.3 .3 300.7 0 288.9s5.9-22.8 16.1-28.7l448-256c10.7-6.1 23.9-5.5 34 1.4z"/></svg>
            </i>
            <span class="submit-text">Send Feedback</span>
            <span class="submit-loading" style="display: none;">Sending...</span>
          </button>
        </div>
      </form>

      <div class="feedback-success" id="feedback-success" style="display: none;">
        <i class="icon" aria-hidden="true" focusable="false">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209L241 337c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l47 47L335 175c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9z"/>
            </svg>
        </i>
        <h4>Thank you!</h4>
        <p>Your feedback has been received.</p>
        <button class="btn btn-primary" id="feedback-done">
            Done
        </button>
      </div>

      <div class="feedback-error" id="feedback-error" style="display: none;">
        <i class="icon" aria-hidden="true" focusable="false">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c9.4-9.4 24.6-9.4 33.9 0l47 47 47-47c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-47 47 47 47c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0l-47-47-47 47c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l47-47-47-47c-9.4-9.4-9.4-24.6 0-33.9z"/>
            </svg>
        </i>
        <h4>Something went wrong</h4>
        <p id="error-message">Please try again later.</p>
        <button class="btn btn-secondary" id="feedback-retry">
            Try Again
        </button>
      </div>
    </div>
  </div>
</div>
